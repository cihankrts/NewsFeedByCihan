<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstScreenActivity"
    android:padding="20dp"
    android:background="@drawable/moon">

    <LinearLayout
        android:id="@+id/LLNews"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Haber Bülteni"
            android:textSize="40sp"
            android:gravity="left"
            android:textColor="@color/twinkle_blue"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/LLNewsSources"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/LLNews"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/btnCumhuriyet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="Cumhuriyet"
            android:textColor="@color/twinkle_blue"
            android:textSize="30sp"
            android:clickable="true">

        </TextView>

        <TextView
            android:id="@+id/btnBBC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="BBC"
            android:textColor="@color/twinkle_blue"
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:clickable="true">

        </TextView>

        <TextView
            android:id="@+id/btnBirgün"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="Bir Gün"
            android:textColor="@color/twinkle_blue"
            android:layout_marginTop="100dp"
            android:textSize="30sp"
            android:clickable="true">

        </TextView>

        <TextView
            android:id="@+id/btnFutbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="Futbol Haberleri"
            android:textColor="@color/twinkle_blue"
            android:layout_marginTop="500dp"
            android:textSize="30sp"
            android:clickable="true">

        </TextView>

        <TextView
            android:id="@+id/btnCanliHaber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="Canlı haberler"
            android:textColor="@color/twinkle_blue"
            android:layout_marginTop="550dp"
            android:textSize="30sp"
            android:clickable="true">

        </TextView>

        <TextView
            android:id="@+id/btnCnnTurk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="Cnn Türk"
            android:textColor="@color/twinkle_blue"
            android:layout_marginTop="400dp"
            android:textSize="30sp"
            android:clickable="true">

        </TextView>

        <TextView
            android:id="@+id/btnSputnik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="Sputnik"
            android:textColor="@color/twinkle_blue"
            android:layout_marginTop="450dp"
            android:textSize="30sp"
            android:clickable="true">

        </TextView>


    </RelativeLayout>



</RelativeLayout>